extends layouts/layout

append head

    title CMXCANVAS
    link(rel='stylesheet', type='text/css', href='css/cmxcanvas.css')
    script(data-main='js/cmxcanvas', src='js/vendor/require.js')
    script
        //not the most elegant solution for this AT ALL.
        $(function() { 
            $('li.libNav').addClass('active');
        });

append #MAIN   
        
    #library.container 
        .row
            each issue in issues  
                .col-sm-4.issueEntry
                    a(issueId=issue._id, href="/read?id="+issue._id)
                        img.img-responsive(src=issue.thumb)
                        p
                            = issue.series.name.toUpperCase() +':'
                            br
                            = issue.title